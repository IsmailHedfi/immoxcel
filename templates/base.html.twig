        <script>
            function toggleMenu(menuIndex) {
    var menuSub = document.querySelectorAll('.menu-sub')[menuIndex];
    if (menuSub) {
        if (menuSub.style.display === 'none' || menuSub.style.display === '') {
            menuSub.style.display = 'block'; // Show the menu if hidden
            setTimeout(() => {
                menuSub.style.opacity = 1; // Fade in the menu after a short delay
            }, 10);
        } else {
            menuSub.style.opacity = 0; // Fade out the menu
            setTimeout(() => {
                menuSub.style.display = 'none'; // Hide the menu after fading out
            }, 300);
        }
    }
}
</script>
