</div>
<div class="formPopupX" id="popupForm">
	<div
		class="cardX">
		<!-- This card is for the add project popup -->
		<form action="{{ path('project_tasks', {'projectId': project.id}) }}" method="POST" class="formContainerX">
			<button type="button" class="delete-btn" onclick="closeForm()">x</button>
			<h2>Create a Task</h2>
			{{ form_start(form) }}
			{{ form_label(form.taskTitle, null, { 'label': 'Task Title', 'label_attr': {'class': 'form-control-label'}}) }}
			{{ form_widget(form.taskTitle) }}
			{{ form_label(form.taskDescription, null, { 'label': 'Task Description', 'label_attr': {'class': 'form-control-label' , 'type':'text-area'}}) }}
			{{ form_widget(form.taskDescription) }}
			<div hidden>
				{{ form_widget(form.taskDeadline) }}
				{{ form_widget(form.taskStatus, {'attr': {'value': 'To Do'}})}}
				{{ form_widget(form.taskCompletionDate) }}
				{{ form_widget(form.project) }}

			</div>
			<table>
				<tr>
					<td>
						<button type="submit" class="buttonX">Create</button>
					</td>
					<td>
						<button type="button" class="cancelX" onclick="closeForm()">Cancel</button>
					</td>
				</tr>
			</table>
			{{ form_end(form) }}
		</form>
	</div>
</div>
<script>
	// Initialize Sortable for each task list
new Sortable(document.getElementById('todo-list'), {
group: 'tasks',
animation: 150,
onAdd: function (evt) {
const taskId = evt.item.dataset.taskId;
console.log(taskId);
handleUpdate(taskId, 'To Do');
}
});

new Sortable(document.getElementById('doing-list'), {
group: 'tasks',
animation: 150,
onAdd: function (evt) {
const taskId = evt.item.dataset.taskId;
console.log(taskId);
handleUpdate(taskId, 'Doing');
}
});

new Sortable(document.getElementById('done-list'), {
group: 'tasks',
animation: 150,
onAdd: function (evt) {
const taskId = evt.item.dataset.taskId;
console.log(taskId);
handleUpdate(taskId, 'Done');
}
});

// Function to handle the update event and update task status
function handleUpdate(taskId, status) { // Perform AJAX request to update task status
fetch('/update-task-status', {
method: 'POST',
headers: {
'Content-Type': 'application/json'
},
body: JSON.stringify(
{taskId: taskId, status: status}
), // Pass taskId instead of taskIds array
}).then(response => {
if (response.ok) {
console.log('Task status updated successfully');
} else {
console.error('Failed to update task status');
}
}).catch(error => {
console.error('Error:', error);
});
}
</script></main>{% endblock %}
