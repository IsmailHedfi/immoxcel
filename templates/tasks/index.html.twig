						</div>
					</div>
				</div>

				<div class="col-md-4">
					<div class="card">
						<div class="card-header">
							<h5 class="card-title">Doing</h5>
						</div>
						<div class="card-body" id="doing-list">
							{% for task in tasks %}
								{% if task.taskStatus == 'Doing' %}
									<div class="task mb-3 position-relative" data-task-id="{{ task.id }}">
										<a href="{{ path('app_task_details', {'id': task.id}) }}">
											<form method="post" action="{{ path('app_tasks_delete', {'id': task.id}) }}">
												<button type="submit" class="delete-btn">x</button>
											</form>
											{{ task.taskTitle }}
											<!-- Additional task details if needed -->
										</a>
									</div>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>

				<div class="col-md-4">
					<div class="card">
						<div class="card-header">
							<h5 class="card-title">Done</h5>
						</div>
						<div class="card-body" id="done-list">
							{% for task in tasks %}
								{% if task.taskStatus == 'Done' %}
									<div class="task mb-3 position-relative" data-task-id="{{ task.id }}">
										<a href="{{ path('app_task_details', {'id': task.id}) }}">
											<form method="post" action="{{ path('app_tasks_delete', {'id': task.id}) }}">
												<button type="submit" class="delete-btn">x</button>
											</form>
											{{ task.taskTitle }}
											<!-- Additional task details if needed -->
