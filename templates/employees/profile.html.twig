{% extends 'base.html.twig' %}


{% block body %}
	<body class="g-sidenav-show bg-gray-100">


		<div class="main-content position-relative max-height-vh-100 h-100">

			
			<!-- End Navbar -->
			<div class="container-fluid py-4">
				<div class="row">
					{{ form_start(formAdd,{'attr': {'novalidate': 'novalidate'}}) }}
					<div class="col-md-8">
						<div class="card">
							<div class="card-header pb-0">
								<div class="d-flex align-items-center">
									<p class="mb-0">Create Profile</p>
								</div>
							</div>
							<div class="card-body">
								<p class="text-uppercase text-sm">User Information</p>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">First name</label>
											<br>
											{{form_widget(formAdd.EmpName, {'attr': {'class': 'form-control','placeholder':"Employee's name"}}) }}
                                            {{ form_errors(formAdd.EmpName) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Last name</label>
											<br>
											{{form_widget(formAdd.EmpLastName, {'attr': {'class': 'form-control','placeholder':"Employee's last name"}}) }}
                                            {{ form_errors(formAdd.EmpLastName) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Sex</label>
											<br>
											{{form_widget(formAdd.EmpSex,{'attr':{'class':'form-control','placeholder':"Employee's sex"}}) }}
                                            {{ form_errors(formAdd.EmpSex) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Birthday Date</label>
											<br>
											{{form_widget(formAdd.birthDate,{'attr':{'class':'form-control','placeholder':"Employee's birthday"}}) }}
                                            {{ form_errors(formAdd.birthDate) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Email address</label>
											<br>
											{{form_widget(formAdd.EmpEmail,{'attr':{'class':'form-control','placeholder':"Employee's email"}})}}
                                            {{ form_errors(formAdd.EmpEmail) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Function</label>
											<br>
											{{form_widget(formAdd.EmpFunction,{'attr':{'class':'form-control','placeholder':"Employee's function"}})}}
                                            {{ form_errors(formAdd.EmpFunction) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Hire Date</label>
											<br>
											{{form_widget(formAdd.hireDate,{'attr':{'class':'form-control','placeholder':"Employee's hire date"}}) }}
                                            {{ form_errors(formAdd.hireDate) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">End Contract Date</label>
											<br>
											{{form_widget(formAdd.endContractDate,{'attr':{'class':'form-control','placeholder':"Employee's end contract date"}}) }}
                                            {{ form_errors(formAdd.endContractDate) }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Leave days allowed</label>
											<br>
        										{{ formAdd.vars.data.allowedLeaveDays }}
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Contract type</label>
											<br>
											{{form_widget(formAdd.contractType,{'attr':{'class':'form-control','placeholder':"Employee's contract type"}}) }}
                                            {{ form_errors(formAdd.contractType) }}
										</div>
									</div>
									
									<div class="col-md-6">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">CV</label>
											<br>
											{{form_widget(formAdd.Empcv,{'attr':{'class':'form-control','placeholder':"Employee's cv"}}) }}
                                            {{ form_errors(formAdd.Empcv) }}
										</div>
									</div>
								</div>
								<hr class="horizontal dark">
								<p class="text-uppercase text-sm">Contact Information</p>
								<div class="row">
									<div class="col-md-12">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Address</label>
											<br>
											{{form_widget(formAdd.EmpAddress,{'attr':{'class':'form-control','placeholder':"Employee's address"}})}}
                                            {{ form_errors(formAdd.EmpAddress) }}
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label for="example-text-input" class="form-control-label">Phone Number</label>
											<br>
											{{form_widget(formAdd.EmpPhone,{'attr':{'class':'form-control','placeholder':"Employee's phone number"}})}}
                                            {{ form_errors(formAdd.EmpPhone) }}
										</div>
									</div>
								</div>
								<hr class="horizontal dark">
								<div class="d-flex justify-content-end">
									{{ form_widget(formAdd.save, {'attr': {'class': 'btn btn-primary btn-sm'}}) }}
								</div>
							</div>
						</div>
					</div>
					{{ form_end(formAdd) }}

					<!--
																	-->
					<div class="col-md-4">
						<div class="card">
							<div class="card-header pb-0 px-3">
								<h6 class="mb-0">List of leaves</h6>
								<a class="btn btn-primary btn-sm ms-auto" href="{{path('app_leave_add',{'id': id}) }}">ADD</a>
							</div>
							{% for leave in leaves %}
								<div class="card-body pt-4 p-3">
									<ul class="list-group">
										<li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
											<div class="d-flex flex-column">
												<h6 class="mb-3 text-sm">{{leave.getId()}}</h6>
												<span class="mb-2 text-xs">Type:
													<span class="text-dark font-weight-bold ms-sm-2">{{leave.getLeaveType()}}</span>
												</span>
												<span class="mb-2 text-xs">Starting date:
													<span class="text-dark ms-sm-2 font-weight-bold">{{leave.getStartDate()| date('Y-m-d') }}</span>
												</span>
												<span class="text-xs">Finishing date:
													<span class="text-dark ms-sm-2 font-weight-bold">{{leave.getFinishDate()| date('Y-m-d') }}</span>
												</span>
											</div>
											<div class="ms-auto text-end">
												<a class="btn btn-link text-danger text-gradient px-3 mb-0" href="{{path('app_leave_delete',{'id': leave.getId()}) }}">
													<i class="far fa-trash-alt me-2" aria-hidden="true"></i>Delete</a>
												<a class="btn btn-link text-dark px-3 mb-0" href="{{path('app_leave_edit',{'id': leave.getId()}) }}">
													<i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
											</div>
										</li>

									</ul>
								</div>
							{% else %}
								no leaves found

							{% endfor %}
						</div>
					</div>
					<!--
																		-->
				</div>	
			
			</div>

		</div>
	</body>
{% endblock %}
